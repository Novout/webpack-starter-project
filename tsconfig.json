{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "./",
    "noImplicitAny": false,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true ,
    "strict": true
  },
  "include": [
    "src/*",
    "test/*"
  ],
  "exclude": [
    "node_modules",
  ]
}